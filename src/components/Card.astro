---
export interface Props {
  title: string;
  body: string;
  href?: string;
  imageHref: string;
  target?: string;
}

const { title, body, imageHref, href, target } = Astro.props;
---

<li>
  {
    target ? (
      <a href={href} target={target}>
        <img
          class="rounded-xl"
          width={720}
          src={imageHref}
          alt={imageHref.substring(imageHref.lastIndexOf("/") + 1)}
        />
        <div class="p-3 text-center">
          <h2 class="font-bold">-{title}-</h2>
          <p>{body}</p>
        </div>
        </a>
        ) : (
          <>
          <img
          class="rounded-xl"
          width={720}
          src={imageHref}
          alt={imageHref.substring(imageHref.lastIndexOf("/") + 1)}
          />
          <div class="p-3 text-center">
            <h2 class="font-bold">-{title}-</h2>
            <p>{body}</p>
          </div>
      </>
    )
  }
</li>
