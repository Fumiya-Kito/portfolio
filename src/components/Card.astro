---
export interface Props {
  title: string;
  body: string;
  href?: string;
  imageHref?: string;
  target?: string;
}

const { title, body, imageHref, href, target } = Astro.props;
---

<li class="border border-slate-300 rounded-xl ">
  {
    imageHref && (
      <img
        class=""
        width={720}
        src={imageHref}
        alt={imageHref.substring(imageHref.lastIndexOf("/") + 1)}
      />
    )
  }
  {
    target ? (
      <a href={href} class="" target={target}>
        <h2>{title}</h2>
        <p>{body}</p>
      </a>
    ) : (
      <h2>{title}</h2>
      <p>{body}</p>
    )
  }
</li>
