---
import BaseHead from '../components/BaseHead.astro';
import Card from '../components/Card.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<BaseLayout pageTitle={SITE_TITLE}>
			<main class="">
				<div class="pt-14 px-8 mx-auto max-w-3xl bg-gray-50">
					<!-- masthead -->
					<section id="masthead">
						<img class="m-auto" src="/astro_header.png" alt="masthead">
					</section>
					<!-- Skills -->
					<section id="skill">
						<h1 class="text-4xl pt-32 pb-10 text-center">My Skill</h1>
						<ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
							<Card title="Frontend" body="フロントエンド開発" href='#' imageHref="/frontend.svg"/>
							<Card title="Backend" body="バックエンド開発" href='#' imageHref="/backend.svg"/>
							<Card title="Basics" body="インフラ・環境構築・バージョン管理" href='#' imageHref="/basic.svg"/>
							<Card title="Framework" body="フレームワーク" href='#' imageHref="/framework.svg"/>
						</ul>
					</section>
					<!-- Works -->
					<sction>
						<h1 id="work" class="text-4xl pt-32 pb-10 text-center">My Works</h1>
						<ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
							<Card title="シフト管理アプリ" body="シフト提出・管理をWeb上で行う" href='https://django-vercel-three-khaki.vercel.app/' imageHref="/shiftweb.png" target="_blank"/>
						</ul>
					</sction>
					<!-- Blog -->
					<section>
						<h1 class="text-4xl pt-32 pb-10 text-center">Blog</h1>
					</section>

					<!-- Contact -->
					<h1 id="sns" class="text-4xl pt-32 pb-10">SNS</h1>
					<p class=""><a target="_blank" href="https://github.com/Fumiya-Kito">GitHub</a></p>
					<p class=""><a target="_blank" href="https://zenn.dev/fkito">zenn</a></p>
				</div>
			</main>
		</BaseLayout>
	</body>
</html>
